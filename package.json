{
    "name": "leagr",
    "private": true,
    "version": "2.10.0",
    "description": "A SvelteKit application for managing a social (football) leagues.",
    "author": "Veli Gebrev",
    "type": "module",
    "scripts": {
        "dev": "vite dev",
        "build": "vite build",
        "preview": "vite preview",
        "prepare": "svelte-kit sync || echo ''",
        "check": "svelte-kit sync && svelte-check --tsconfig ./jsconfig.json",
        "check:watch": "svelte-kit sync && svelte-check --tsconfig ./jsconfig.json --watch",
        "format": "prettier --write .",
        "lint": "prettier --check . && eslint .",
        "test": "vitest run --config vitest.config.js && vitest run --config vitest.svelte.config.js",
        "test:backend": "vitest run --config vitest.config.js",
        "test:frontend": "vitest run --config vitest.svelte.config.js"
    },
    "devDependencies": {
        "@eslint/compat": "^1.4.0",
        "@eslint/js": "^9.36.0",
        "@sveltejs/adapter-auto": "^6.1.0",
        "@sveltejs/adapter-node": "^5.3.2",
        "@sveltejs/kit": "^2.43.2",
        "@sveltejs/vite-plugin-svelte": "^6.2.0",
        "@tailwindcss/forms": "^0.5.10",
        "@tailwindcss/typography": "^0.5.18",
        "@tailwindcss/vite": "^4.1.13",
        "@testing-library/jest-dom": "^6.8.0",
        "@testing-library/svelte": "^5.2.8",
        "@testing-library/user-event": "^14.6.1",
        "@types/canvas-confetti": "^1.9.0",
        "@types/node": "^24.5.2",
        "@vitest/ui": "^3.2.4",
        "eslint": "^9.36.0",
        "eslint-config-prettier": "^10.1.8",
        "eslint-plugin-svelte": "^3.12.4",
        "globals": "^16.4.0",
        "jsdom": "^27.0.0",
        "prettier": "^3.6.2",
        "prettier-plugin-svelte": "^3.3.3",
        "prettier-plugin-tailwindcss": "^0.6.14",
        "svelte": "^5.39.5",
        "svelte-check": "^4.3.2",
        "tailwindcss": "^4.1.13",
        "typescript": "^5.9.2",
        "vite": "^7.1.7",
        "vitest": "^3.2.4"
    },
    "dependencies": {
        "async-mutex": "^0.5.0",
        "canvas-confetti": "^1.9.3",
        "flowbite": "^3.1.2",
        "flowbite-svelte": "^1.13.16",
        "flowbite-svelte-icons": "^3.0.0",
        "form-data": "^4.0.4",
        "fuzzball": "^2.2.3",
        "mailgun.js": "^12.0.3"
    }
}
