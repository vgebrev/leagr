{
    "name": "leagr",
    "private": true,
    "version": "2.2.0",
    "description": "A SvelteKit application for managing a social (football) leagues.",
    "author": "Veli Gebrev",
    "type": "module",
    "scripts": {
        "dev": "vite dev",
        "build": "vite build",
        "preview": "vite preview",
        "prepare": "svelte-kit sync || echo ''",
        "check": "svelte-kit sync && svelte-check --tsconfig ./jsconfig.json",
        "check:watch": "svelte-kit sync && svelte-check --tsconfig ./jsconfig.json --watch",
        "format": "prettier --write .",
        "lint": "prettier --check . && eslint .",
        "test": "vitest run --config vitest.config.js && vitest run --config vitest.svelte.config.js",
        "test:backend": "vitest run --config vitest.config.js",
        "test:frontend": "vitest run --config vitest.svelte.config.js"
    },
    "devDependencies": {
        "@eslint/compat": "^1.3.1",
        "@eslint/js": "^9.31.0",
        "@sveltejs/adapter-auto": "^6.0.0",
        "@sveltejs/adapter-node": "^5.2.13",
        "@sveltejs/kit": "^2.25.1",
        "@sveltejs/vite-plugin-svelte": "^6.1.0",
        "@tailwindcss/forms": "^0.5.9",
        "@tailwindcss/typography": "^0.5.15",
        "@tailwindcss/vite": "^4.1.11",
        "@testing-library/jest-dom": "^6.6.3",
        "@testing-library/svelte": "^5.2.8",
        "@testing-library/user-event": "^14.6.1",
        "@types/canvas-confetti": "^1.9.0",
        "@types/node": "^24.1.0",
        "@vitest/ui": "^3.2.4",
        "eslint": "^9.31.0",
        "eslint-config-prettier": "^10.1.8",
        "eslint-plugin-svelte": "^3.11.0",
        "globals": "^16.3.0",
        "jsdom": "^26.1.0",
        "prettier": "^3.6.2",
        "prettier-plugin-svelte": "^3.3.3",
        "prettier-plugin-tailwindcss": "^0.6.14",
        "svelte": "^5.36.13",
        "svelte-check": "^4.3.0",
        "tailwindcss": "^4.1.11",
        "typescript": "^5.0.0",
        "vite": "^7.0.5",
        "vitest": "^3.2.4"
    },
    "dependencies": {
        "async-mutex": "^0.5.0",
        "canvas-confetti": "^1.9.3",
        "flowbite": "^3.1.2",
        "flowbite-svelte": "^1.10.16",
        "flowbite-svelte-icons": "^2.2.1",
        "form-data": "^4.0.4",
        "mailgun.js": "^12.0.3"
    }
}
