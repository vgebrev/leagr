{
    "name": "leagr",
    "private": true,
    "version": "2.18.2",
    "description": "A SvelteKit application for managing a social (football) leagues.",
    "author": "Veli Gebrev",
    "type": "module",
    "scripts": {
        "dev": "vite dev",
        "build": "vite build",
        "preview": "vite preview",
        "prepare": "svelte-kit sync || echo ''",
        "check": "svelte-kit sync && svelte-check --tsconfig ./jsconfig.json",
        "check:watch": "svelte-kit sync && svelte-check --tsconfig ./jsconfig.json --watch",
        "format": "prettier --write .",
        "lint": "prettier --check . && eslint .",
        "test": "vitest run --config vitest.config.js && vitest run --config vitest.svelte.config.js",
        "test:backend": "vitest run --config vitest.config.js",
        "test:frontend": "vitest run --config vitest.svelte.config.js"
    },
    "devDependencies": {
        "@eslint/compat": "^2.0.1",
        "@eslint/js": "^9.36.0",
        "@sveltejs/adapter-auto": "^7.0.0",
        "@sveltejs/adapter-node": "^5.5.2",
        "@sveltejs/kit": "^2.50.1",
        "@sveltejs/vite-plugin-svelte": "^6.2.4",
        "@tailwindcss/forms": "^0.5.11",
        "@tailwindcss/typography": "^0.5.19",
        "@tailwindcss/vite": "^4.1.18",
        "@testing-library/jest-dom": "^6.9.1",
        "@testing-library/svelte": "^5.3.1",
        "@testing-library/user-event": "^14.6.1",
        "@types/canvas-confetti": "^1.9.0",
        "@types/node": "^25.1.0",
        "@vitest/ui": "^4.0.18",
        "eslint": "^9.39.2",
        "eslint-config-prettier": "^10.1.8",
        "eslint-plugin-svelte": "^3.14.0",
        "globals": "^17.2.0",
        "jsdom": "^27.4.0",
        "prettier": "^3.8.1",
        "prettier-plugin-svelte": "^3.4.1",
        "prettier-plugin-tailwindcss": "^0.7.2",
        "svelte": "^5.49.1",
        "svelte-check": "^4.3.5",
        "tailwindcss": "^4.1.18",
        "typescript": "^5.9.3",
        "vite": "^7.3.1",
        "vitest": "^4.0.18"
    },
    "dependencies": {
        "async-mutex": "^0.5.0",
        "canvas-confetti": "^1.9.4",
        "flowbite": "^4.0.1",
        "flowbite-svelte": "^1.31.0",
        "flowbite-svelte-icons": "^3.1.0",
        "form-data": "^4.0.5",
        "fuzzball": "^2.2.3",
        "mailgun.js": "^12.7.0",
        "sharp": "^0.34.5"
    }
}
